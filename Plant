package roen.pkgfinal;

import java.util.Random;

public class Plant {

    //mem vars
    private boolean isAlive = true;
    private String name;
    private boolean isTree;
    private boolean isFlower;
    private int heightCM = 1;
    private int maxHeightCM;

    //these mem vars simulate the plant taking in nutrients for photosynthesis
    private int sugar = 1;
    private int cO2 = 0;
    private int h2O = 0;
    private boolean light;

    public void passDay() {
        Random rand2 = new Random();
        int nH2O = rand2.nextInt(3) + 0;
        h2O = h2O + nH2O;

        photosynthesis();

        grow();
    }//close method

    public void photosynthesis() {
        while (cO2 >= 6 && h2O >= 6 && light == true) {
            cO2 = cO2 - 6;
            h2O = h2O - 6;
            checkNutrientLevels();
            sugar = sugar + 1;
        }//close while
    }//close method

    private void grow() {
        if (sugar >= 2) {
            sugar = sugar - 2;
            heightCM = heightCM + 1;
        }//close if
        if (heightCM > maxHeightCM){
            //In the garden class, we will check the isAlive status for each
            //plant object and if it is false, then we will delete it. But what 
            //I do not know is what will happen to the array. Will the array 
            //shift everything down to fill in the gap? IDK
            isAlive = false;
        }
    }//close method

    public double getHeight() {
        return heightCM;
    }//close method

    public void setName(String newName) {
        name = newName;
    }//close method

    public String getName() {
        return name;
    }//close method

    public void setType(String type) {
        if ("tree".equals(type)) {
            isTree = true;
            isFlower = false;
            Random rand1 = new Random();
            maxHeightCM = rand1.nextInt(2500);
        } else if ("flower".equals(type)) {
            isTree = false;
            isFlower = true;
            Random rand2 = new Random();
            maxHeightCM = rand2.nextInt(20);
        }//close if else
    }//close setType method

    public boolean getTreeType() {
        return isTree;
    }//close getType method

    public boolean getFlowerType() {
        return isFlower;
    }//close getType method

    public void checkNutrientLevels() {
        if (cO2 < 1 || h2O < 1 || light == false) {
            System.out.println("* * * Nutrient report for " + name + " * * *");
            if (cO2 < 6) {
                System.out.println("    CO2: " + cO2);
            }//close if
            if (h2O < 1) {
                System.out.println("    H2O: " + h2O);
            }//close if
            if (light == false) {
                System.out.println("    No light");
            }//close if
        } else {
            System.out.println(name + " has sufficient nutrients.");
        }//close if 
    }//close method

}//close class
